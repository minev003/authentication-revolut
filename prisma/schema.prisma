datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int      @id @default(autoincrement())
  firstName      String
  lastName       String
  email          String   @unique
  password       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  profilePicture String?
  idCardPicture  String?
  selfiePicture  String?

  verification Verification? @relation("UserVerification") // Само указваме релация, без foreign key тук
}

model Verification {
  id            Int      @id @default(autoincrement())
  userId        Int      @unique
  user          User     @relation("UserVerification", fields: [userId], references: [id], onDelete: Cascade)
  idCardPicture String
  selfiePicture String
  isVerified    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
